{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "strict": true,
    "outDir": "build",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
  }
}
